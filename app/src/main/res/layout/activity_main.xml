<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="25dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x_draw"
        >
    </com.google.android.material.imageview.ShapeableImageView>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x_draw"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@id/full_coverage"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/full_coverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Full Coverage"
        >
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/headline"
        android:text="@string/puerto_rico_power_outage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_coverage"
        android:layout_centerHorizontal="true"
        android:paddingVertical="10dp"

        >
    </com.google.android.material.textview.MaterialTextView>

    <View
        android:id="@+id/first_divider"
        style="@style/divider"
        android:layout_below="@+id/headline"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/top_coverage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/top_coverage"
        >
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/top_coverage_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x_draw">
    </com.google.android.material.imageview.ShapeableImageView>


</RelativeLayout>