<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Components-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginStart">-10dp</item>
        <item name="android:layout_marginEnd">-10dp</item>
    </style>

    <style name="image">
        <item name="android:maxHeight">200dp</item>
        <item name="android:background">@color/design_default_color_secondary</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyTheme.Image</item>
    </style>

    <style name="sub_image">
        <item name="android:maxHeight">60dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:background">@color/design_default_color_secondary</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyTheme.Image</item>
    </style>

    <style name="news_group">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">75sp</item>
        <item name="android:maxHeight">15sp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Caption</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="dots">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/tc_headline_dots</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="sub_headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Headline4</item>
        <item name="android:maxWidth">275dp</item>
    </style>


    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>
</resources>